<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bckgrnd</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/base</item>
        <item name="android:textColor">#f0f0f0</item>

        <item name="android:fontFamily">@font/luckiestguy</item>
        <item name="fontFamily">@font/luckiestguy</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/checked</item>
        <item name="android:textColor">@color/text1</item>
    </style>

    <style name="keyboard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tv_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="keyboard.onclick" parent="keyboard">
        <item name="android:onClick">keyboard</item>
    </style>

    <style name="keyboard.onclick.margin8" parent="keyboard.onclick">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="multi">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/base</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">multiChoice</item>
    </style>

    <style name="easyOper">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/base</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bonusButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/info</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/checked</item>
    </style>


    <style name="heavyOperators">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/base</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="heavyOperands">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/base</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>

