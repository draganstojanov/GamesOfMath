<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
    android:clickable="true"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="96dp"
    android:paddingBottom="96dp"
    android:visibility="gone"
    tools:visibility="visible">


    <LinearLayout
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/tv_stroke"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/lboard_show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include layout="@layout/sound_settings" />

    </LinearLayout>


    <TextView
        android:id="@+id/lboard_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/tv_stroke"
        android:gravity="center"
        android:onClick="showHighScoresList"
        android:padding="8dp"
        android:text="@string/go_hiscores"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/game_settings_ok"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sound" />


    <TextView
        android:id="@+id/game_settings_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/tv_stroke"
        android:gravity="center"
        android:onClick="goSettingsOk"
        android:padding="8dp"
        android:text="@string/ok"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lboard_show" />


</android.support.constraint.ConstraintLayout>