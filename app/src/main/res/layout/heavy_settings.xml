<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/heavy_set_lay"
    android:layout_margin="8dp"
    tools:context=".Heavy.HeavySettings">



    <include layout="@layout/topbar"/>




    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">


        <LinearLayout
            android:id="@+id/heavy_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_stroke"

            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@id/heavy_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="3">



            <TextView
                android:id="@+id/heavy_10_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/heavy_10_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/heavy_10_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/heavy_100"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_stroke"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heavy_10"
            app:layout_constraintVertical_weight="3">

            <TextView
                android:id="@+id/heavy_100_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/heavy_100_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/heavy_100_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform" />


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/help"/>

</android.support.constraint.ConstraintLayout>