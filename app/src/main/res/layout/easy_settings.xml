<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/easy_set_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".Easy.EasySettings">

    <include layout="@layout/topbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/easy_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toTopOf="@id/ad_view_wrapper"
        app:layout_constraintTop_toBottomOf="@id/top_bar">


        <LinearLayout
            android:id="@+id/easy_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_stroke"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/easy_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="3">

            <TextView
                android:id="@+id/easy_2_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/easy_2_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/easy_2_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/easy_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/tv_stroke"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/easy_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/easy_2"
            app:layout_constraintVertical_weight="3">


            <TextView
                android:id="@+id/easy_3_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/easy_3_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/easy_3_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/easy_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_stroke"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/easy_3"
            app:layout_constraintVertical_weight="3">

            <TextView
                android:id="@+id/easy_4_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/easy_4_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4dp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/easy_4_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


    <RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/easy_set">

        <com.google.android.gms.ads.AdView

            android:id="@+id/add_view_bottom_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/AD_MOB_MATH_BOTTOM" />

    </RelativeLayout>


    <include layout="@layout/help" />


</android.support.constraint.ConstraintLayout>


