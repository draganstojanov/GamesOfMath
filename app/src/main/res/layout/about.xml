<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="48dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:clickable="true">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/info_stroke"
        android:padding="4dp">

        <TextView

            android:id="@+id/aap1"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@color/checked"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/app"
            android:textColor="@color/info"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/aap2"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/app_name"
                android:textColor="@color/info"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

            <TextView
                android:id="@+id/about_version"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/info"
                android:gravity="center"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_author"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/info_stroke"
        android:padding="4dp">

        <TextView
            android:id="@+id/aau1"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@color/checked"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/author"
            android:textColor="@color/info"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/aau2"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/dragan"
                android:textColor="@color/info"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/info"
                android:gravity="center"
                android:onClick="mailToMe"
                android:text="\@"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_designer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/info_stroke"
        android:padding="4dp">

        <TextView

            android:id="@+id/aad1"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@color/checked"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/designer"
            android:textColor="@color/info"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/aad2"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/milena"
                android:textColor="@color/info"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/info"
                android:gravity="center"
                android:onClick="mailToDesigner"
                android:text="\@"
                android:textColor="@color/checked"
                app:autoSizeTextType="uniform"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aap1" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/ap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/info"
        android:gravity="center"
        android:onClick="goPolicy"
        android:padding="12dp"
        android:text="@string/policy"
        android:textColor="@color/checked"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp"/>

    <TextView
       android:id="@+id/aok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/info"
        android:gravity="center"
        android:onClick="goMain"
        android:padding="12dp"
        android:text="@android:string/ok"
        android:textColor="@color/checked"
        app:autoSizeTextType="uniform" />


</LinearLayout>